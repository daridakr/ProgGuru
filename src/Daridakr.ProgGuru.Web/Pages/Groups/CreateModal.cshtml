@page
@using Daridakr.ProgGuru.Localization
@using Daridakr.ProgGuru.Web.Pages.Groups
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Volo.Abp.Users
@model CreateModalModel
@inject IStringLocalizer<ProgGuruResource> L
@inject ICurrentUser CurrentUser
@{
    Layout = null;
}

<form asp-page="/Groups/CreateModal">
    <div class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@L["NewGroup"].Value</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <i class="fa fa-remove"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <abp-input asp-for="Group.CreatorId" type="hidden" value="@CurrentUser.Id"/>
                    </div>
                    <div class="form-group mb-3">
                        <abp-input asp-for="Group.Title" type="text" class="form-control"
                        style="border-color: #1D2F5D !important; color: #1D2F5D !important" placeholder="@L["GroupExample"]"/>
                    </div>
                    <div class="form-group mb-3">
                        <abp-input asp-for="Group.Subtitle" type="text" class="form-control"
                        style="border-color: #1D2F5D !important; color: #1D2F5D !important" placeholder="@L["GroupSubtitleExample"]"/>
                    </div>
                    <div class="form-group mb-3">
                        <abp-input asp-for="Group.TextInformation" class="form-control"
                        style="border-color: #1D2F5D !important; color: #1D2F5D !important" placeholder="@L["GroupTextExample"]"/>
                    </div>
                    <div class="form-group mb-3">
                        <abp-input asp-for="Group.Developer" type="text" class="form-control"
                        style="border-color: #1D2F5D !important; color: #1D2F5D !important" placeholder="@L["GroupDeveloperExample"]"/>
                    </div>
                    <div class="form-group mb-3">
                        <abp-input asp-for="Group.IssueYear" type="number" class="form-control"
                        style="border-color: #1D2F5D !important; color: #1D2F5D !important" placeholder="@L["GroupIssueYearExample"]"/>
                    </div>
                    <div class="form-group mb-3">
                        <abp-input asp-for="Group.Website" type="url" class="form-control"
                        style="border-color: #1D2F5D !important; color: #1D2F5D !important" placeholder="@L["GroupSiteExample"]"/>
                    </div>
                    <div class="form-group mb-3">
                        <img class="preview"/>
                        <span class="btn btn-round btn-primary btn-file" style="width: 100% !important;height: 40px;background: rebeccapurple !important">
                             <abp-input asp-for="@Model.Cover" class="custom-file-input" type="file" preview-target-id="preview_1" accept="image/*" name="Cover" id="Cover" 
                                style="border-color: #1D2F5D !important; color: #1D2F5D !important"/>
                        </span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">@L["Create"]</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@L["Cancel"]</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    $(document).ready(function () {
        $('input[type="file"]').change(function () {
        var file = this.files; //Files[0] = 1st file
        if (file[0])
          $('.preview').attr('src', URL.createObjectURL(file[0]));
    });
});
</script>

<script src="~/scripts/core/popper.min.js" type="text/javascript"></script>
<script src="~/scripts/core/bootstrap.min.js" type="text/javascript"></script>
<script src="~/scripts/plugins/perfect-scrollbar.jquery.min.js"></script>
<!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
