@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.Account.Localization
@using Daridakr.ProgGuru.Localization
@inject IHtmlLocalizer<ProgGuruResource> L
@model Daridakr.ProgGuru.Web.Pages.Account.RegisterConfirmationModel
@{
    ViewData["Title"]=@L["RegisterConfirmation"];
}
<div class="card mt-3 shadow-sm rounded">
    <div class="card-body p-5">
        <h1>@ViewData["Title"]</h1>
        @{
            if(@Model.DisplayConfirmAccountLink)
            {
                <p>
                    <a id="confirm-link" href="@Model.EmailConfirmationUrl" style="color: #e14eca !important;">Click here to confirm your account</a>
                </p>
            }
            else
            {
                <p>@L["ConfirmEmail"]</p>
            }
          }
          <center>
               <img src="https://res.cloudinary.com/dgvd7jieo/image/upload/v1645182496/system/emailconfirmation_oqaq8n.png" style="width: 450px;"/>
          </center>
     </div>
</div>