@page
@using Daridakr.ProgGuru.Enums.Users
@using Daridakr.ProgGuru.Localization
@using Microsoft.Extensions.Localization
@using Daridakr.ProgGuru.Web.Pages.Users.Skills
@using Volo.Abp.Users
@model CreateProfSkillModalModel
@inject IStringLocalizer<ProgGuruResource> L
@inject ICurrentUser CurrentUser
@{
    Layout = null;
}

        <!--   Core JS Files   -->
<script src="~/scripts/core/popper.min.js" type="text/javascript"></script>
<script src="~/scripts/core/bootstrap.min.js" type="text/javascript"></script>

        <script>
        jQuery(document).ready(function($) {
            // включаем Popover
            $('[data-toggle=popover]').popover();
         });
        </script>

<form asp-page="/Users/Skills/CreateProfSkillModal">
    <div class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@L["NewProfSkill"].Value</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <i class="fa fa-remove"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <abp-input asp-for="ProfSkill.CreatorId" type="hidden" value="@CurrentUser.Id"/>
                    </div>
                    <div class="form-group mb-3">
                         <abp-select asp-for="ProfSkill.GroupId" asp-items="@Model.Groups" class="form-control"
                        style="margin-bottom: 0px;background-color: rebeccapurple;" />
                    </div>
                    <div class="form-group mb-3 row">
                        <button type="button" class="btn btn-link" data-container="body" data-toggle="popover" data-placement="left" data-content="@L["BeginningYearExample"]"
                        style="margin: 0 !important;">
                            <i class="fa fa-info-circle" style="color: rebeccapurple;cursor: pointer"></i>
                        </button>
                        <abp-input asp-for="ProfSkill.BeginningYear" class="form-control"
                        style="border-color: #1D2F5D !important; color: #1D2F5D !important"/>
                    </div>
                    <div class="form-group mb-3 row">
                        <button type="button" class="btn btn-link" data-container="body" data-toggle="popover" data-placement="left" data-content="@L["EndYearExample"]"
                        style="margin: 0 !important;">
                            <i class="fa fa-info-circle" style="color: rebeccapurple;cursor: pointer"></i>
                        </button>
                        <abp-input asp-for="ProfSkill.EndYear" class="form-control"
                        style="border-color: #1D2F5D !important; color: #1D2F5D !important"/>
                    </div>
                    <div class="form-group mb-3 row">
                         <button type="button" class="btn btn-link" data-container="body" data-toggle="popover" data-placement="left" data-content="@L["KnownledgeLevelExample"]"
                        style="margin: 0 !important;">
                            <i class="fa fa-info-circle" style="color: rebeccapurple;cursor: pointer"></i>
                        </button>
                        <abp-input asp-for="ProfSkill.KnownledgeLevel" class="form-control"
                        style="border-color: #1D2F5D !important; color: #1D2F5D !important"/>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">@L["Create"]</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@L["Cancel"]</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="~/scripts/core/popper.min.js" type="text/javascript"></script>
<script src="~/scripts/core/bootstrap.min.js" type="text/javascript"></script>
<!-- Chartist JS -->
<script src="~/scripts/plugins/chartjs.min.js"></script>
<!--  Notifications Plugin    -->
<script src="~/scripts/plugins/bootstrap-notify.js"></script>
<!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
<script src="~/scripts/black-dashboard.js?v=1.0.0" type="text/javascript"></script>