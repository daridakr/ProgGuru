@page
@using Daridakr.ProgGuru.Enums.Users
@using Daridakr.ProgGuru.Localization
@using Microsoft.Extensions.Localization
@using Daridakr.ProgGuru.Web.Pages.Users.Skills
@using Volo.Abp.Users
@model CreateLanguageSkillModalModel
@inject IStringLocalizer<ProgGuruResource> L
@inject ICurrentUser CurrentUser
@{
    Layout = null;
}

<form asp-page="/Users/Skills/CreateLanguageSkillModal">
    <div class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@L["NewLanguageSkill"].Value</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <i class="fa fa-remove"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <abp-input asp-for="LanguageSkill.CreatorId" type="hidden" value="@CurrentUser.Id"/>
                    </div>
                    <div class="form-group mb-3">
                        <abp-input asp-for="LanguageSkill.Name" type="text" class="form-control"
                        style="border-color: #1D2F5D !important; color: #1D2F5D !important" placeholder="@L["LanguageSkillExample"]"/>
                    </div>
                    <div class="form-group mb-3">
                        <abp-select asp-for="LanguageSkill.LanguageLevel" asp-items="Html.GetEnumSelectList<UserLanguageLevel>()" class="form-control"
                        style="margin-bottom: 0px;background-color: rebeccapurple;" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">@L["Create"]</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@L["Cancel"]</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="~/scripts/core/popper.min.js" type="text/javascript"></script>
<script src="~/scripts/core/bootstrap.min.js" type="text/javascript"></script>
<script src="~/scripts/plugins/perfect-scrollbar.jquery.min.js"></script>
